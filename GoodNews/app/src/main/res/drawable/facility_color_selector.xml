<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 클릭됐을 때의 배경 -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/main" /> <!-- 메인 색 바탕 -->
            <corners android:radius="250dp" />
        </shape>
    </item>

    <!-- 기본 상태의 배경 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- 흰색 바탕 -->
            <corners android:radius="250dp" />
            <stroke android:width="1dp" android:color="@color/main" /> <!-- 메인 색 선 -->
        </shape>
    </item>
</selector>